{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "dependencyDashboardTitle": "chore: dependency dashboard",
  "dependencyDashboardLabels": ["chore", "dependencies", "renovatebot"],
  "labels": ["chore", "dependencies", "renovatebot"],
  "automerge": false,
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["/^@pbn//"]
    },
    {
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "3 days"
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "npm": {
    "managerFilePatterns": ["/(^|/)package\\.json$/", "/(^|/)package\\.json\\.hbs$/"]
  },
  "timezone": "Asia/Singapore",
  "schedule": ["* * 1,15 * *"]
}
