    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@pbn/eslint-config": "workspace:*",
    "@pbn/prettier-config": "workspace:*",
    "@pbn/tailwind-config": "workspace:*",
    "@pbn/tsconfig": "workspace:*",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.6.0",
    "jiti": "^1.21.7",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.5.3"
